<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="443dp"
        android:layout_height="778dp"
        android:src="@drawable/fndBienve"
        app:layout_constraintBaseline_toBaselineOf="parent"
        tools:layout_editor_absoluteX="-10dp" />

    <TextView
        android:id="@+id/txtBienve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="41dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Bienvenido a Little Fifa"
        android:textColor="#FFFFFF"
        android:textSize="37sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:fontFamily="sans-serif-thin"
        android:text="Aplicación de Gestion de Jornadas de fútbol"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/txtBienve"
        app:layout_constraintTop_toBottomOf="@+id/txtBienve" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="392dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:fontFamily="sans-serif-light"
        android:text="Te invito a explorar las numerosas opciones y funcionalidades que nuestra aplicación pone a tu disposición para que puedas gestionar y estar al tanto de los resultados de los variados partidos que se encuentran en juego. Con solo acceder a nuestra plataforma, descubrirás un mundo lleno de herramientas y recursos diseñados para proporcionarte una experiencia completa y satisfactoria."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-light"
        android:text="Dentro de nuestra aplicación, tendrás la posibilidad de elegir entre una amplia gama de opciones para gestionar los resultados de los partidos. Podrás acceder a un calendario detallado que muestra la programación de los juegos, permitiéndote planificar tus actividades en base a los horarios de tus equipos favoritos. Además, podrás obtener información en tiempo real sobre los marcadores, anotaciones y estadísticas de cada encuentro, manteniéndote al tanto de todo lo que sucede en el terreno de juego."
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="157dp"
        android:layout_height="0dp"
        android:layout_marginBottom="34dp"
        android:src="@drawable/fndinicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>