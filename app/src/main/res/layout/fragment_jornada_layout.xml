<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.temporada.jornada_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEquipo1"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtEquipo1"
                android:layout_width="121dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Deportivo"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtResulEquipo1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="3"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSeparador"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="-"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtResulEquipo2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="1"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEquipo2"
                android:layout_width="121dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Bilbao "
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgEquipo2"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                tools:src="@tools:sample/avatars" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>